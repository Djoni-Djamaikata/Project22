                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li class="nav-item">
                            <!-- Dropdown меню -->
                            <div class="dropdown">
                                <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Марки
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="/brand">Всички</a></li>
                                    <li><a class="dropdown-item" href="/brand/detals?brand=1&cat=0">YAMAHA</a></li>
                                    <li><a class="dropdown-item" href="/brand/detals?brand=2&cat=0">HONDA</a></li>
                                    <li><a class="dropdown-item" href="/brand/detals?brand=3&cat=0">KTM</a></li>
                                    <li><a class="dropdown-item" href="/brand/detals?brand=4&cat=0">SUZUKI</a></li>
                                    <li><a class="dropdown-item" href="/brand/detals?brand=5&cat=0">GASGAS</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <!-- Dropdown меню -->
                            <div class="dropdown">
                                <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Категори
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="/categories/detals?cat=1">Enduro</a></li>
                                    <li><a class="dropdown-item" href="/categories/detals?cat=2">Krosovi</a></li>
                                    


                                </ul>
                            </div>
                        </li>
                        
                        <a class="nav-link ms-3 phone" href="tel:+35989345164"><i class="bi bi-telephone-fill"></i> +359 899345164</a>
                        <a class="nav-link ms-3 phone" href="mailto:contact@MotoRex.com">
                            <i class="bi bi-envelope-fill"></i>
                            contact@MotoRex.com
                            
                        </a>

                        <a class="nav-link ms-3 phone" href="https://maps.app.goo.gl/fmGzqPUpbQqoniDw6"  target="_blank"><i class="bi bi-geo-alt"></i> Адрес</a>


                        <a href="/Product/Search">🔍 Търсачка</a>

                        

                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2025 - MotoRex.com- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
